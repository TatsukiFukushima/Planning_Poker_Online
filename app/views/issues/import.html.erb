<% provide(:title, 'githubから登録') %>
<div class="return">
  <%= link_to @return_url do %>
    <i class="fab fa-youtube fa-4x fa-flip-horizontal"></i>
  <% end %>
</div>
<h1>githubから登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(issues_import_path, method: :post) do %>

      <%= label_tag "リポジトリ名 (例: hoge/huga)" %>
      <%= text_field_tag :repo, '', class: "form-control" %>

      <%= submit_tag "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
