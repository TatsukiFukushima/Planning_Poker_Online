<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<% if current_page.last? && !current_page.first?%>
  <div class="pagination_message">
    最も的確な検索サイトっぽさを表示するために、検索サイトと似た文章をここに表示しています。<br>
    検索結果は既にすべて表示されています。
  </div>
<% end %>
<%= paginator.render do -%>
  <nav class="pagination">
    <%= prev_page_tag unless current_page.first? %>
    <span class="prev_p">P</span>
    <% each_page do |page| -%>
      <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
        <%= page_tag page %>
      <% end -%>
    <% end -%>
    <span class="next_k">k</span>
    <span class="next_e">e</span>
    <span class="next_r">r</span>
    <%= next_page_tag unless current_page.last? %>
  </nav>
<% end -%>
