<li id="micropost-<%= micropost.id %>">
  <%= gravatar_for(micropost.user, size: 50) %>
  <span class="user"><%= micropost.user.name %></span>
  <span class="timestamp">だいたい<%= time_ago_in_words(micropost.created_at) %>前</span>
  <% if current_user?(micropost.user) %>
    <%= link_to "削除", micropost, method: :delete, class: :delete, data: {confirm: "コメントを削除するぞ。"} %>
  <% end %>
  <span class="content"><%= simple_format(micropost.content) %></span>
</li>
