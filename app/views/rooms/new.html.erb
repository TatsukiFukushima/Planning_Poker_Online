<% provide(:title, '部屋作成') %>
<h1>部屋作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @room do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "部屋名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :about, "説明" %>
      <%= f.text_field :about, class: 'form-control' %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
