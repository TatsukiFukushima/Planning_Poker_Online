<% provide(:title, @room.name) %>
<div class="row">
  <aside class="room_sidebar col-md-4">
    <div class="room_sidebar_top">
      <p class="room_title"><%= @room.name %></p>
      <p class="room_about"><%= @room.about %></p>
      <div class="room_issues">
        <p class="room_issues_top">Issue一覧</p>
        <%= link_to "編集", "/rooms/#{@room.id}/room_issues/edit" %>
        <div class="room_issues_wrapper">
          <% @room.issues.order(created_at: :desc).each do |issue| %>
            <div class="room_issue_record">
              <%= issue.name %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="cards_wrapper">
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>1</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>2</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>3</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>5</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>8</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>13</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>21</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>40</span>
      </div>
      <div class="card">
        <%= image_tag('background_card.png') %>
        <span>X</span>
      </div>
    </div>
  </aside>
  <div class="room_main col-md-8">
    <div class="room_message_box">
      <div id="messages", data-room_id="<%= @room.id %>">
        <%= render @messages %>
      </div>
    </div>
    <div class="room_form_wrapper">
      <textarea type="text" placeholder= "Shift + Enter で送信" data-behavior= 'room_speaker'></textarea>
    </div>
  </div>
</div>
