<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= gravatar_for @user, size: 60 %>
      <%= @user.name %>
      </h1>
      <%= link_to "編集", edit_user_path(current_user) if current_user?(@user) %>
    </section>
    <% if current_user?(@user) %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    <% end %>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>つぶやき</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
  
</div>

<% if @user.microposts.any? %>
  <div class="paginate microposts_paginate">
    <%= paginate @microposts %>
  </div>
<% end %>
