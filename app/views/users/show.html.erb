<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= gravatar_for @user, size: 60 %>
      <span class="aside_user_name"><%= @user.name %></span>
      </h1>
      <span class="edit_user_link"><%= link_to "編集", edit_user_path(current_user) if current_user?(@user) %></span>
      <%= @user.about %>
    </section>
    <% if current_user?(@user) %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    <% end %>
  </aside>

  <div class="col-md-8 micropost-wrapper">
    <h3>つぶやき</h3>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% else %>
      <ul class="microposts">
        <li id="micropost-none">
          <span class="content">まだつぶやきが無いみたいだな。</span>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<% if @user.microposts.any? %>
  <div class="paginate microposts_paginate">
    <%= paginate @microposts %>
  </div>
<% end %>
